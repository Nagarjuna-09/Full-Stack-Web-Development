<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
    <%console.log(listTitle)%>
  </div>

  <div class="box">
    <% newListItems.forEach(function(task) {%>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value=<%=task._id%> onchange="this.form.submit()">
          <p><%= task.name %></p>
        </div>
        <input type="hidden" name="listName" value=<%= listTitle %>>
      </form>
    <%});%>
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus>
        <button type="submit"  name="button"  value = <%= listTitle %>   >+</button>
      </form>
  </div>

<%- include("footer") -%>
